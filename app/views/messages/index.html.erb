<div class="wrapper">
  <div class = "side-bar">
    <%= render "side_bar" %>
    <div class="user-name">
      <div class="name">
        <a href="#">Tom</a>
      </div>
      <div class="create-chat">
        <a href="#">チャットを作成する</a>
      </div>
    </div>
    <div class="chat-list">
      <div class="room-name">
        <a href="#" class="room-link">chatroom1</a>
      </div>
      <div class="room-name">
        <a href="#" class="room-link">chatroom2</a>
      </div>
    </div>
  </div>
  <div class="chat">
    <%= render "main_chat" %>
    <div class="chat-name">
      <div class="left-header">hogefuga</div>
      <div class="right-header">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
    <div class="chat-messages">  
      <div class="chat-message">
        <div class="upper-message">
          <div class="message-user">
            Tom
          </div>
          <div class="date">
            2020/3/31(Wed) 12:43:30
          </div>
        </div>
        <div class="lower-message">
          <div class="message">おはよう</div>
        </div>
      </div>
    </div>
    <div class="chat-form">
      <div class="text-form">
        <input class="text-input" placeholder="type a message">
        <label class="form-image">
          <span class="image-file">画像</span>
          <input class="hidden" type="file">
      </div>
      <%# <div class="image-form"></div> %>
      <input class="form-button" type="submit" value="送信">
      </div>
    </div>
  </div>
</div>
